{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": { 
          "node": "8"
        },
        "forceAllTransforms": true
      }
    ],
    "@babel/typescript",
  ],
  "plugins": [
    "@babel/proposal-class-properties",
    "@babel/proposal-object-rest-spread"
  ],
  "env": {
    "development": {
      "plugins": [
        ["module-resolver", {
          "alias": {
            "~": "./gulp"
          },
          "extensions": [".js", ".ts"]
        }]
      ]
    },
    "production": {
      "plugins": [
        ["module-resolver", {
          "alias": {
            "~": "./gulp"
          },
          "extensions": [".js", ".ts"]
        }]
      ]
    }
  }
}
